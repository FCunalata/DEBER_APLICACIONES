@model IEnumerable<Tipo_Datos.Models.Entidades.ClientesModel>

@{
    ViewData["Title"] = "Ventas - Lista de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Clientes</h1>
<p>
    <a asp-action="Nuevo" class="btn btn-primary">Crear Cliente</a>
</p>

<table class="table table-responsive table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th class="text-danger">#</th>
            <th class="text-danger">Nombre Cliente</th>
            <th class="text-danger">RUC</th>
            <th class="text-danger">Telefono</th>
            <th class="text-danger">Email</th>
            <th class="text-danger">Direcciòn</th>
            <th class="text-danger">Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td >@Html.DisplayFor(modelItem => item.Nombres)</td>
                <td>@Html.DisplayFor(modelItem => item.Cedula_RUC)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                <td>@Html.DisplayFor(modelItem => item.isDelete)
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            
            </tr>
        }
    </tbody>
</table>
